.action-bar {
	display: flex;
	flex-direction: column;
	position: fixed;
	z-index: 999;
	right: 40rpx;
	top: 30rpx;
}
.action-bar image {
	width: 90rpx;
	height: 90rpx;
}
.action-bar .back-home image {
	display: block;
}
.action-bar .qrcode {
	margin-top: 30rpx;
}

swiper,
swiper image {
	width: 750rpx;
	height: 750rpx;
}


.info {
	padding: 20rpx 100rpx 20rpx 30rpx;
	background-color: #fff;
	position: relative;
}
.info-tt {
	font-size: 28rpx;
	color: #333;
	word-break: break-all;
	text-align: justify;
	text-align-last: left;
}
.info-price {
	display: flex;
	align-items: baseline;
	margin: 10rpx 0;
}
.info-price view {
	font-size: 44rpx;
	color: #ff4c4c;
	margin-right: 8rpx;
}
.info-price text {
	text-decoration: line-through;
	font-size: 30rpx;
	color: #666;
}
.info-num {
	font-size: 28rpx;
	color: #888;
}
.info-share {
	position: absolute;
	right: 40rpx;
	bottom: 40rpx;
}
.info-share image {
	width: 40rpx;
	height: 40rpx;
}

.nav {
	background-color: #fff;
	margin-top: 20rpx;
	padding: 0 30rpx;
	display: flex;
}
.nav-item {
	flex: 1;
	position: relative;
	text-align: center;
	font-size: 28rpx;
	padding: 24rpx 0;
}
.nav-item::after {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 80rpx;
	height: 6rpx;
	background-color: #ff4c4c;
}
.nav-item.active::after {
	content: "";
}
