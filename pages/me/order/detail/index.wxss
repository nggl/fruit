.tip {
	border-top: 2rpx solid #f2f2f2;
	background-color: #fff;
	padding: 30rpx 100rpx;
}
.tip-status {
	font-size: 28rpx;
	color: #ff4c4c;
}
.tip-code,
.tip-time {
	font-size: 24rpx;
	color: #777;
}
.tip-code {
	color: #333;
	padding: 12rpx 0;
}

.address {
	background-color: #fff;
	padding: 30rpx;
	border-radius: 12rpx;
	width: 710rpx;
	margin: 20rpx auto;
	box-sizing: border-box;
}
.address-user,
.address-side {
	line-height: 40rpx;
	padding: 0 50rpx;
}
.address-user {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 16rpx;
	display: flex;
}
.address-side {
	font-size: 24rpx;
	color: #777;
}

.goods {
	width: 710rpx;
	margin: 0 auto;
	border-radius: 12rpx;
	background-color: #fff;
	padding: 20rpx 50rpx;
	box-sizing: border-box;
}
.goods-item {
	border-bottom: 2rpx solid #f2f2f2;
	display: flex;
	padding: 12rpx 0;
}
.goods-item image {
	width: 180rpx;
	height: 180rpx;
	margin-right: 20rpx;
}
.goods-item-tip {
	width: 464rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.goods-item-tip-tt {
	width: 464rpx;
	font-size: 30rpx;
}
.goods-item-tip-ct {
	width: 464rpx;
}
.goods-item-tip-ct view {
	display: inline-block;
	padding: 4rpx 6rpx;
	border-radius: 4rpx;
	font-size: 24rpx;
	color: #999;
	background-color: #f9f9f9;
}
.goods-item-tip-ft {
	display: flex;
	justify-content: space-between;
	align-items: baseline;
	font-size: 24rpx;
	color: #999;
}
.goods-item-tip-ft text {
	font-size: 32rpx;
	color: #ff4c4c;
}
.goods-price {
	padding-top: 20rpx;
	border-bottom: 2rpx solid #f2f2f2;
}
.goods-price-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	color: #999;
	margin-bottom: 20rpx;
}
.goods-count {
	padding: 20rpx 0 16rpx;
	display: flex;
	align-items: baseline;
	justify-content: flex-end;
	font-size: 24rpx;
	color: #999;
}
.goods-count text {
	font-size: 30rpx;
	color: #ff4c4c;
}


.payway {
	box-sizing: border-box;
	padding: 20rpx 50rpx;
	width: 710rpx;
	margin: 20rpx auto 0;
	background-color: #fff;
	border-radius: 12rpx;
}
.payway-ct-item {
	display: flex;
	align-items: center;
	padding: 30rpx 50rpx 30rpx 0;
	font-size: 26rpx;
	color: #3d3c3c;
	background-position: right center;
	background-repeat: no-repeat;
	background-size: 40rpx 40rpx;
}
.payway-ct-item.bdb {
	border-bottom: 2rpx solid #f2f2f2;
}
.payway-ct-item text {
	color: #ff4c4c;
	font-size: 24rpx;
}

.fixed {
	width: 750rpx;
	box-sizing: border-box;
	background-color: #fff;
	position: fixed;
	left: 0;
	bottom: 0;
	padding: 20rpx 70rpx;
	display: flex;
	justify-content: flex-end;
}
.fixed-btn {
	width: 164rpx;
	height: 56rpx;
	border-radius: 28rpx;
	font-size: 24rpx;
	color: #fff;
	background-color: #cccccc;
	line-height: 56rpx;
	text-align: center;
	margin-left: 20rpx;
}
.fixed-btn.btn-red {
	background-color: #ff4c4c;
}
.fixed-btn.bbc {
	color: #ff4c4c;
	border: 2rpx solid #ff4c4c;
	background-color: #fff;
}